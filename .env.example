# Database Configuration
POSTGRES_DB=openpharma
POSTGRES_USER=admin
POSTGRES_PASSWORD=your_secure_password_here

# Database URL for API (updated for Docker container access)
DATABASE_URL=postgresql://admin:your_secure_password_here@postgres:5432/openpharma

# LLM Configuration (default: Claude API with Ollama fallback)
USE_LOCAL_LLM=false
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_MODEL=llama3.1:8b

# Reranker Configuration (optional)
# Default: cross-encoder/ms-marco-MiniLM-L-6-v2 (fast, ~0.8s)
# Options: BAAI/bge-reranker-v2-m3 (high quality, ~48s), BAAI/bge-small-en-v1.5 (balanced, ~1s)
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# API Keys (required when USE_LOCAL_LLM=false)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
